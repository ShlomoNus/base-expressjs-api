{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "nodenext",
        "target": "esnext",
        "types": [
            "node"
        ],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "strict": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
        "emitDeclarationOnly": true,
        "baseUrl": ".",
        "paths": {
            "@utils/*": [
                "src/utils/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@repository/*": [
                "src/repository/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@middleware/*": [
                "src/middleware/*"
            ],
            "@handlers/*": [
                "src/handlers/*"
            ],
            "@src/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "jest.config.js",
        "jest.config.ts",
        "jest.setup.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}